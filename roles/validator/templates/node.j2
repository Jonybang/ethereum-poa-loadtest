[parity]
chain = "{{ home }}/spec.json"

[rpc]
# TODO: replace with 127.0.0.1
interface = "0.0.0.0"
apis = ["web3", "eth", "parity", "parity_set", "personal", "net", "traces", "rpc"]
processing_threads = {{ processor_count }}
cors=["all"]

[websockets]
interface = "127.0.0.1"
hosts = ["all"]
origins = ["all"]
apis = ["web3", "eth", "parity", "parity_set", "personal", "net", "traces", "rpc"]
disable = false

[ipc]
disable = false

[ui]
disable = true

[network]
reserved_peers = "{{ home }}/bootnodes.txt"
discovery = false

[account]
password = ["{{ home }}/node.pwd"]

[mining]
usd_per_tx = "0"
engine_signer = "0x{{ account.stdout }}"
min_gas_price = 1000000000
tx_queue_size = 8192
force_sealing = true
reseal_on_txs = "none"

[dapps]
disable = true

[misc]
log_file = "{{ home }}/logs/parity.log"
# Logging pattern (`<module>=<level>`, e.g. `own_tx=trace`).
logging = "miner=trace,own_tx,tx_queue=trace"